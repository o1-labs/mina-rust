{
  "printWidth": 180,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "**/*.html",
      "options": {
        "parser": "angular",
        "printWidth": 180,
        "bracketSameLine": false,
        "htmlWhitespaceSensitivity": "ignore",
        "singleAttributePerLine": false
      }
    }
  ]
}
